{
  "name": "cross-ai-browser",
  "version": "1.0.0",
  "description": "A desktop app for switching between AI chat services",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --mac",
    "build:win": "electron-builder --win",
    "build:all": "electron-builder --mac --win",
    "dev": "electron . --enable-logging"
  },
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "electron": "^33.0.0",
    "electron-builder": "^25.0.0",
    "electron-rebuild": "^3.2.9",
    "icon-gen": "^5.0.0"
  },
  "build": {
    "appId": "com.crossai.browser",
    "productName": "Cross AI Browser",
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "assets/icon.icns"
    },
    "win": {
      "target": ["nsis"],
      "icon": "assets/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "directories": {
      "output": "dist"
    }
  },
  "dependencies": {
    "electron-store": "^8.2.0",
    "node-pty": "^1.0.0",
    "uuid": "^13.0.0",
    "xterm": "^5.3.0",
    "xterm-addon-fit": "^0.8.0"
  }
}
